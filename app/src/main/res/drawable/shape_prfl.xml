<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <solid android:color="#80d8d8d8" />
            <corners
                android:bottomRightRadius="@dimen/_35sdp"
                android:bottomLeftRadius="@dimen/_35sdp"/>
            <padding android:bottom="@dimen/_10sdp"></padding>


        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="3px">

        <shape  android:shape="rectangle">

            <solid android:color="#ff9479" />
            <corners
                android:bottomRightRadius="@dimen/_40sdp"
                android:bottomLeftRadius="@dimen/_40sdp"/>


        </shape>

    </item>


</layer-list>